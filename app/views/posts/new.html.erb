<h3>Post Form</h3>

<%# Upon "Submit Post", action directs us to "/posts" %>
<%# This form will use the POST http verb. %>

<%= form_tag posts_path do %>
    <label>Post title:</label><br>
    <%# name= refers to the hash info. It will store the user input in the Params hash at that location.%>
    <%= text_field_tag :'post[title]'%> <br>
    
   
    <label>Post description:</label><br>
    <%= text_area_tag :'post[description]' %> <br>
        
    <input type="submit" value="Submit Post">
<% end %>
 
<%= params.inspect %>